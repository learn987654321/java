file1.java File
import java.util.Scanner;
class file1
{
	String  input()
	{
        System.out.println("Enter the string");
        Scanner s=new Scanner(System.in);	
        String str=s.nextLine();
        return str;
	}
}

file2.java File
class file2
{
    public static void main(String args[])
    {
        file1 f = new file1();
        String str2 = f.input();
        System.out.println("the string is" + str2);
    }
} 
